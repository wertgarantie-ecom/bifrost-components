{
  "compilerOptions": {
    "lib": [
      "es2020",
      "DOM"
    ],
    "module": "esnext",
    "target": "es2020",
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDeclarationOnly": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}